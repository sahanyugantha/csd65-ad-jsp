<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<context-param>
		<param-name>avatar-location</param-name>
		<param-value>/Users/sahanyugantha/eclipse-workspace/jspapp/src/main/webapp/img/</param-value>
	</context-param>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.csd65.jspapp.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.csd65.jspapp.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>signup</servlet-name>
		<servlet-class>com.csd65.jspapp.SignupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>edituser</servlet-name>
		<servlet-class>com.csd65.jspapp.UpdateuserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>themechange</servlet-name>
		<servlet-class>com.csd65.jspapp.ThemeChangeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>avatar-upload</servlet-name>
		<servlet-class>com.csd65.jspapp.UploadAvatarServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>edituser</servlet-name>
		<url-pattern>/edituser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>themechange</servlet-name>
		<url-pattern>/themeChange</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>avatar-upload</servlet-name>
		<url-pattern>/avatarUpload</url-pattern>
	</servlet-mapping>


</web-app>
